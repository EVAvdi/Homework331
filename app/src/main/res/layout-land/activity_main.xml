<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/resultField"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/operationField"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/numberField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result"
        android:inputType="phone" />
    <LinearLayout
        android:id="@+id/oper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/numberField"
        app:layout_constraintStart_toEndOf="@id/generatoin">
        <Button
            android:id="@+id/btn_del"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AC"
            android:onClick="onOperationClick"
            />
        <Button
            android:id="@+id/btn_plus_or_minus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+/-"
            android:onClick="onOperationClick"
            />
        <Button
            android:id="@+id/btn_procent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="%"
            android:onClick="onOperationClick"
            />
        <Button
            android:id="@+id/btn_delenie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="/"
            android:onClick="onOperationClick"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/own_for_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/oper"
        app:layout_constraintStart_toEndOf="@id/generatoin"
        app:layout_constraintEnd_toStartOf="@id/basic_oper"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:onClick="onNumberClick"
            />
        <Button
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:onClick="onNumberClick"
            />
        <Button
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/four_for_six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/own_for_three"
        app:layout_constraintStart_toEndOf="@id/generatoin"
        app:layout_constraintEnd_toStartOf="@id/basic_oper">

        <Button
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            />
        <Button
            android:id="@+id/btn_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            />
        <Button
            android:id="@+id/btn_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/seven_for_nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/four_for_six"
        app:layout_constraintStart_toEndOf="@id/generatoin"
        app:layout_constraintEnd_toStartOf="@id/basic_oper">

        <Button
            android:id="@+id/btn_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            />
        <Button
            android:id="@+id/btn_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            />
        <Button
            android:id="@+id/btn_9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            />
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/seven_for_nine"
        app:layout_constraintStart_toEndOf="@id/generatoin"
        app:layout_constraintEnd_toEndOf="parent">
        <Button
            android:id="@+id/zero"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="0"
            app:layout_constraintStart_toStartOf="@id/btn_zero"
            app:layout_constraintEnd_toStartOf="@id/simbol"
            app:layout_constraintTop_toTopOf="@id/btn_zero"
            android:onClick="onNumberClick"/>
        <Button
            android:id="@+id/simbol"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=","
            app:layout_constraintStart_toEndOf="@id/zero"
            app:layout_constraintEnd_toStartOf="@id/btn_equals"
            app:layout_constraintTop_toTopOf="@id/btn_zero"
            android:onClick="onNumberClick"/>

        <Button
            android:id="@+id/btn_equals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/btn_zero"
            app:layout_constraintEnd_toEndOf="@id/btn_zero"
            app:layout_constraintStart_toEndOf="@id/simbol"
            android:text="="
            android:onClick="onOperationClick"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/basic_oper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/oper"
        app:layout_constraintStart_toEndOf="@id/own_for_three"
        app:layout_constraintEnd_toEndOf="parent">
    <Button
        android:id="@+id/btn_mnog"
        android:layout_height="wrap_content"
        android:layout_width="87.5dp"
        android:text="*"
        app:layout_constraintTop_toTopOf="@id/basic_oper"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="onOperationClick" />
    <Button
        android:id="@+id/btn_minus"
        android:layout_width="87.5dp"
        android:layout_height="wrap_content"
        android:text="-"
        app:layout_constraintTop_toBottomOf="@id/btn_mnog"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="onOperationClick"
        />
    <Button
        android:id="@+id/btn_plus"
        android:layout_width="87.5dp"
        android:layout_height="wrap_content"
        android:text="+"
        app:layout_constraintTop_toBottomOf="@id/btn_minus"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="onOperationClick"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/generatoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/oper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/own_for_three">
        <Button
            android:id="@+id/sin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIN"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/generatoin"
            app:layout_constraintEnd_toStartOf="@+id/cos"/>
        <Button
            android:id="@+id/cos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COS"
            app:layout_constraintStart_toEndOf="@+id/sin"
            app:layout_constraintTop_toTopOf="@+id/generatoin"
            app:layout_constraintEnd_toStartOf="@+id/log"/>
        <Button
            android:id="@+id/log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/cos"
            app:layout_constraintTop_toTopOf="@+id/generatoin"
            app:layout_constraintEnd_toStartOf="@+id/X2"
            android:text="LOG"/>
        <Button
            android:id="@+id/X2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/log"
            app:layout_constraintTop_toTopOf="@+id/generatoin"
            app:layout_constraintEnd_toEndOf="@id/generatoin"
            android:text="X2"/>
        <Button
            android:id="@+id/X3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X3"
            app:layout_constraintTop_toBottomOf="@+id/X2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/drob"/>
        <Button
            android:id="@+id/drob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/X2"
            app:layout_constraintStart_toEndOf="@+id/X3"
            app:layout_constraintEnd_toStartOf="@+id/in"
            android:text="1/x"/>
        <Button
            android:id="@+id/in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/X2"
            app:layout_constraintStart_toEndOf="@+id/drob"
            app:layout_constraintEnd_toStartOf="@+id/pi"
            android:text="In"/>
        <Button
            android:id="@+id/pi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/X2"
            app:layout_constraintStart_toEndOf="@+id/in"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="PI"/>
        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bt1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pi"
            app:layout_constraintEnd_toStartOf="@id/button2"/>
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bt2"
            app:layout_constraintStart_toEndOf="@id/button1"
            app:layout_constraintTop_toBottomOf="@id/pi"
            app:layout_constraintEnd_toStartOf="@id/button3"/>
        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bt3"
            app:layout_constraintStart_toEndOf="@id/button2"
            app:layout_constraintTop_toBottomOf="@id/pi"
            app:layout_constraintEnd_toStartOf="@id/button4"/>
        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bt4"
            app:layout_constraintStart_toEndOf="@id/button3"
            app:layout_constraintTop_toBottomOf="@id/pi"
            app:layout_constraintEnd_toEndOf="@id/generatoin"/>
        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bt5"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button6"/>
        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bt6"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            app:layout_constraintStart_toEndOf="@id/button5"
            app:layout_constraintEnd_toStartOf="@+id/button7"/>
        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bt7"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            app:layout_constraintStart_toEndOf="@id/button6"
            app:layout_constraintEnd_toStartOf="@+id/button8"/>
        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bt8"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            app:layout_constraintStart_toEndOf="@id/button7"
            app:layout_constraintEnd_toEndOf="@id/generatoin"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>